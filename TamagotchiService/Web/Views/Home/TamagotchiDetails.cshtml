@model Tamagotchi.Web.Models.Tamagotchi

@{
    ViewBag.Title = "Tamagotchi details";
}

<h2>@Model.TamagotchiName details</h2>

<hr />
<div class="row">
    <div class="col-sm-4">
        <dl class="dl-horizontal">
            <dt>
                Naam
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TamagotchiName)
            </dd>

            <dt>
                Honger
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Hunger)
            </dd>

            <dt>
                Slaap
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Sleep)
            </dd>

            <dt>
                Verveling
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Boredom)
            </dd>

            <dt>
                Gezondheid
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Health)
            </dd>

            <dt>
                Status
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                Dood
            </dt>

            <dd>
                @{ var result = Model.IsDead ? "Ja" : "Nee"; }
                @result
            </dd>

            <dt>
                Laatste opvraag
            </dt>

            <dd>
                @String.Format("{0} UTC", @Html.DisplayFor(model => model.LastAccess))
            </dd>
        </dl>
    </div>
    <div class="col-sm-4">
        @{ 
            var url = String.Empty;
            if (Model.State == "Hongerig") { url = "../Img/Hunger.png"; }
            if (Model.State == "Ongezond") { url = "../Img/Health.png"; }
            if (Model.State == "Verveeld") { url = "../Img/Boredom.png"; }
            if (Model.State == "Slaperig") { url = "../Img/Sleep.png"; }
            if (Model.State == "Dood") { url = "../Img/Dead.png"; }
            if (Model.State == "Normaal") { url = "../Img/Normaal.png"; }
        }
        <img src="@url" style="width:40px; height:40px" class="img-thumbnail"/>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-condensed">
                <thead><tr><td><b>Topatleet</b></td><td><b>Gestoord</b></td><td><b>Vreetkick</b></td></tr></thead>
                <tbody>
                <tr>
                    <td>
                        @{ var athleteResult = Model.IsAthlete ? "Ja" : "Nee"; } @athleteResult
                    </td>
                    <td>
                        @{ var crazyResult = Model.IsCrazy ? "Ja" : "Nee"; } @crazyResult
                    </td>
                    <td>
                        @{ var munchiesResult = Model.IsMunchies ? "Ja" : "Nee"; } @munchiesResult
                    </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Terug", "Index", "Home", new { @class = "btn btn-primary" })
</p>
