@model Tamagotchi.Web.Models.Tamagotchi
@{
    ViewBag.Title = "Tamagotchi aanmaken";
}

<h2>Tamagotchi aanmaken</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("SaveNewTamagotchi", "Home", new { tamagotchiname = Model.TamagotchiName })) {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <hr />
                <div class="form-group">
                    @Html.TextBoxFor(model => model.TamagotchiName, new { @class = "form-control width-100", @placeholder = "Tamagotchi naam", required = "required" })
                    <br/>
                    <p class="pull-right">
                        <input type="submit" value="Aanmaken" class="btn btn-primary" />
                    </p>
                </div>
            </div>
        }
    </div>
</div>



